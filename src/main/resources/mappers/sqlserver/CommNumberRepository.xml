<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.common.commnumbermanager.repository.CommNumberRepository">

    <insert id="saveCommNumber" parameterType="Map">
        insert into comm_number
        (
            number_type,
            last_value,
            remarks
        )values (
            #{numberType},
            #{lastValue},
            #{remarks}
        )
    </insert>

    <select id="queryCommNumber" parameterType="Map" resultType="DataModel">
        select * from comm_number where number_type = #{numberType}
    </select>

    <update id="updateCommNumber" parameterType="Map">
        update comm_number set last_value = last_value +span where number_type = #{numberType}
    </update>
</mapper>