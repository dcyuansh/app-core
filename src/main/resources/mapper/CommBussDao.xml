<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.common.commbus.dao.CommBussDao">

    <resultMap type="com.common.commbus.entity.CommBuss" id="CommBussMap">
        <result property="busName" column="bus_name" jdbcType="VARCHAR"/>
        <result property="busDesc" column="bus_desc" jdbcType="VARCHAR"/>
        <result property="busType" column="bus_type" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CommBussMap" parameterType="com.common.commbus.dto.CommBussDTO">
        select
          bus_name, bus_desc, bus_type
        from comm_buss
        <where>
            <if test="busName != null and busName != ''">
                and bus_name = #{busName}
            </if>
            <if test="busDesc != null and busDesc != ''">
                and bus_desc = #{busDesc}
            </if>
            <if test="busType != null and busType != ''">
                and bus_type = #{busType}
            </if>
        </where>
    </select>


</mapper>

